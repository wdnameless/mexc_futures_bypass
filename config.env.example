# MEXC Futures Bypass - Configuration Example
# Скопируйте этот файл в config.env и заполните своими данными

# ===========================================
# MEXC API Configuration
# ===========================================

# WEB Token (основной для обхода лимитов)
MEXC_WEB_TOKEN=your_web_token_here

# API Keys (для данных и аналитики)
MEXC_API_KEY=your_api_key_here
MEXC_API_SECRET=your_api_secret_here

# ===========================================
# Trading Parameters
# ===========================================

# Основные настройки
DEFAULT_LEVERAGE=20
DEFAULT_POSITION_SIZE=100.0
MAX_POSITIONS=5

# Risk Management
MAX_DAILY_LOSS=5.0
MAX_DRAWDOWN=10.0
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=3.0

# ===========================================
# Bypass Settings
# ===========================================

# Настройки обхода лимитов
ENABLE_WEB_TOKEN_BYPASS=true
ENABLE_HFT_MODE=true
ENABLE_ARBITRAGE_MODE=true

# Скорость выполнения
ORDER_TIMEOUT=5.0
MAX_CONCURRENT_ORDERS=20
REQUEST_DELAY=0.01

# ===========================================
# Smart Filters
# ===========================================

# Фильтр свежести цены
ENABLE_PRICE_FRESHNESS=true
PRICE_FRESHNESS_THRESHOLD=0.5

# Фильтр влияния на рынок
ENABLE_MARKET_IMPACT=true
MARKET_IMPACT_THRESHOLD=0.5

# Фильтр ликвидности
ENABLE_LIQUIDITY_CHECK=true
MIN_ORDERBOOK_VALUE=50

# ===========================================
# Arbitrage Settings
# ===========================================

# Минимальный спред для арбитража
MIN_ARBITRAGE_SPREAD=3.0

# Символы для арбитража
ARBITRAGE_SYMBOLS=BTC_USDT,ETH_USDT,SOL_USDT,ADA_USDT

# ===========================================
# HFT Settings
# ===========================================

# Настройки высокочастотной торговли
HFT_ENABLED=true
HFT_POSITION_SIZE=50.0
HFT_MAX_HOLD_TIME=30
HFT_PRICE_THRESHOLD=0.1

# ===========================================
# Monitoring & Logging
# ===========================================

# Уровень логирования
LOG_LEVEL=INFO

# Файл логов
LOG_FILE=bypass.log

# Мониторинг производительности
ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# Telegram Integration (опционально)
# ===========================================

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram Chat ID для уведомлений
TELEGRAM_CHAT_ID=your_chat_id

# ===========================================
# Advanced Settings
# ===========================================

# Базовый URL MEXC API
MEXC_BASE_URL=https://contract.mexc.com

# User Agent
USER_AGENT=MEXC-Bypass/1.0

# Retry настройки
MAX_RETRIES=3
RETRY_DELAY=0.5

# WebSocket настройки
WS_RECONNECT_INTERVAL=5.0
WS_PING_INTERVAL=30.0
