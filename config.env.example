# MEXC Futures Bypass - Configuration

# MEXC Credentials
MEXC_WEB_TOKEN=your_web_token_here
MEXC_API_KEY=your_api_key_here
MEXC_SECRET_KEY=your_secret_key_here

# Trading Configuration
LEVERAGE=20
MAX_POSITION_SIZE=1000
STOP_LOSS_PCT=2.0
TAKE_PROFIT_PCT=3.0

# Risk Management
MAX_POSITIONS=3
DAILY_LOSS_LIMIT=100
MAX_DRAWDOWN_PCT=5.0

# HFT Settings
HFT_ORDER_COUNT=5
HFT_BASE_QUANTITY=0.001
HFT_EXECUTION_TIMEOUT=1.0

# Arbitrage Settings
ARBITRAGE_MIN_DIFFERENCE=0.5
ARBITRAGE_MAX_POSITION=100
ARBITRAGE_TIMEOUT=30

# Liquidity Settings
MIN_LIQUIDITY=1000
ORDER_BOOK_DEPTH=20
LIQUIDITY_CHECK_DEPTH=10

# Performance Tracking
TRACK_PERFORMANCE=true
PERFORMANCE_UPDATE_INTERVAL=60
METRICS_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mexc_trading.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# API Settings
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# Security
ENCRYPT_CREDENTIALS=true
ENCRYPTION_KEY=your_encryption_key_here
TOKEN_REFRESH_INTERVAL=3600

# Development
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_TRADING=false